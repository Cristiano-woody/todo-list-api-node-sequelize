{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es6"],  

    /* Modules */
    "module": "commonjs",
    "rootDir": "./src",
   
    /* JavaScript Support */
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  }
}
